<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexGenRedAlert.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="LoginLogo.png" HorizontalOptions="FillAndExpand"
                       VerticalOptions="Start" Margin="20,20,50,20" />
            <Button x:Name="loginButton" Text="Sign In With Google" Margin="20,20,20,20" Clicked="GoogleAuth" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>