<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexGenRedAlert.Views.MenuPage"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout x:Name="MainLayout">
            <StackLayout x:Name="WelcomeStack" VerticalOptions="FillAndExpand" HorizontalOptions="Center" Margin="0,20,0,0">
                <Label x:Name="UserNameLabel" Text="{Binding WelcomeMessage}" FontSize="22" TextColor="{StaticResource PrimaryDark}" />
            </StackLayout>
            
            <StackLayout VerticalOptions="StartAndExpand" Margin="20,0,20,0" >
                <ActivityIndicator x:Name="activityIndicator" IsRunning="True" Color="Crimson"/>
                <Button x:Name="preSvpButton" Text="Pre-Svp Form" Clicked="OpenPreSvpPage" />
                <Button x:Name="SvpButton" Text="Svp Form" Clicked="OpenPostSvpPage" />
                <Button x:Name="LogoutButton" Text="Logout" Command="{Binding LogoutCurrentUser }" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>